@model List<SMS.DataContext.Entities.Location>
@{
    ViewBag.Title = "Location";
}
<div id="page-wrapper" style="min-height: 390px;">
    <div class="main-page">
        <div class="forms">
            <div class="form-three widget-shadow" style="padding:0px;">
                <div class="form-title">
                    <h4>Location Management</h4>
                </div>
                <div class="panel-body-inputin" style="padding:10px 0px 0px 0px;">
                    <form class="form-horizontal" id="frmLocation">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="hidden" name="LocationID" />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Name</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-location-arrow"></i>
                                            </span>
                                            <input type="text" class="form-control1" name="LocationName" required placeholder="Name">
                                        </div>
                                    </div>
                                </div>
                                <input type="button" class="btn btn-success" id="btnCreateLocation" onclick="create('Location','Common/LocationCreate',true)" value="Create" />
                                <input type="button" class="btn btn-primary hidden" id="btnEditLocation" onclick="update('Location','Common/LocationEdit',true)" value="Update" />
                                <input type="button" class="btn btn-info" id="btnClearLocation"
                                       onclick="clearForm('Location')" value="Clear" />
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Remarks</label>
                                    <div class="col-md-8">
                                        <div class="input-group input-icon right">
                                            <span class="input-group-addon">
                                                <i class="fa fa-pencil"></i>
                                            </span>
                                            <textarea id="" class="form-control" type="text" placeholder="Remarks" name="Remarks"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="form-title">
                    <h4>Locations Detail</h4>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-bordered table-striped" id="tblLocation">
                            <thead>

                                <tr>
                                    <th>Action</th>
                                    <th class="hidden">Location ID</th>
                                    <th>Location Name</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td><a href="javascript:void(0);" onclick="deleteDialog('Location','../Common/LocationDelete','@Model[i].LocationID','@Model[i].LocationName')" class="btn btn-sm btn-danger">Delete</a> <a class="btn btn-sm btn-primary" href="javascript:void(0);" onclick="edit('Location',this)">Edit</a> </td>
                                            <td id="LocationID" class="hidden">@Model[i].LocationID</td>
                                            <td id="LocationName">@Model[i].LocationName</td>
                                            <td id="Remarks">@Model[i].Remarks</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

