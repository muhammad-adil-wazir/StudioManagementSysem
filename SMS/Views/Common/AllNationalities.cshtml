@model List<SMS.DataContext.Entities.Nationality>
@{
    ViewBag.Title = "Nationality";
}
<div id="page-wrapper" style="min-height: 390px;">
    <div class="main-page">
        <div class="forms">
            <div class="form-three widget-shadow" style="padding:0px;">
                <div class="form-title">
                    <h4>Nationality Management</h4>
                </div>
                <div class="panel-body-inputin" style="padding:10px 0px 0px 0px;">
                    <form class="form-horizontal" id="frmNationality" action="#">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="hidden" name="NationalityID" />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Name</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-area-chart"></i>
                                            </span>
                                            <input type="text" class="form-control1" name="NationalityName" required placeholder="Name">
                                        </div>
                                    </div>
                                </div>
                                <input type="button" class="btn btn-success" id="btnCreateNationality" onclick="create('Nationality','/Common/NationalityCreate',true)" value="Create" />
                                <input type="button" class="btn btn-primary hidden" id="btnEditNationality" onclick="update('Nationality','Common/NationalityEdit',true)" value="Update" />
                                <input type="button" class="btn btn-info" id="btnClearNationality"
                                       onclick="clearForm('Nationality')" value="Clear" />
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Remarks</label>
                                    <div class="col-md-8">
                                        <div class="input-group input-icon right">
                                            <span class="input-group-addon">
                                                <i class="fa fa-pencil"></i>
                                            </span>
                                            <textarea id="" class="form-control" type="text" placeholder="Remarks" name="Remarks"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="form-title">
                    <h4>Nationalitys Detail</h4>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-bordered table-striped" id="tblNationality">
                            <thead>

                                <tr>
                                    <th>Action</th>
                                    <th class="hidden">Nationality ID</th>
                                    <th>Nationality Name</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td><a href="javascript:void(0);" onclick="deleteDialog('Nationality','../Common/NationalityDelete','@Model[i].NationalityID','@Model[i].NationalityName')" class="btn btn-sm btn-danger">Delete</a> <a class="btn btn-sm btn-primary" href="javascript:void(0);" onclick="edit('Nationality',this)">Edit</a> </td>
                                            <td id="NationalityID" class="hidden">@Model[i].NationalityID</td>
                                            <td id="NationalityName">@Model[i].NationalityName</td>
                                            <td id="Remarks">@Model[i].Remarks</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

